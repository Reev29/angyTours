  #imagenInicio
    width 200px

.parrafoSlider
  font-weight bold
  color #000
  background rgba(255,255,255,0.5)

#slider
  border-radius 15px
  box-shadow 5px 5px 15px black
  margin-left 2em
  margin-top 3em
  width 480px

#articuloCatalogo
