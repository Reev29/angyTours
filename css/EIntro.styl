    text-shadow 5px 5px 40px black
    margin-left 2.5em
  #box3
    margin-left 3em
    width 250px
  #nombreHotel
    text-align center
  #contenido_hotel
    margin-left 10px
    padding 10px
    text-align justify
    width 400px
