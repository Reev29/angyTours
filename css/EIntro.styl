    padding 10px

.img_hotel
  width 350px
  height 350px
  border-radius 15px

#articuloCatalogo #contenido_hotel, #articuloCatalogo #img_hotel
  display inline-block
  vertical-align middle

#articuloCatalogo #box3, #articuloCatalogo #informacionHotel
  display inline-block
  vertical-align middle

#frmCombos
  figure
    width 60px
    margin 0 auto

#articuloPromociones
  #tituloPromociones
    text-shadow 5px 5px 40px black
    margin-left 2.5em

.capasPromociones
  display inline-block
  margin-left 30px
  margin-top 20px
  vertical-align top
  width 500px

.titPromocion
  padding 10px 0px
  text-align center

.contenidoPromocion
  padding 20px

.datosPromocion
  font-weight bold

.imagenesPromociones
  text-align center
  width 460px

#btnMasInfo
  text-align right
  padding 10px

#articuloNosotros
  #textoNosotros
    font-family 'Delius Swash Caps', cursive
    font-size 18px
    padding 10px
    margin-left 2em
    text-align justify
    width 450px
    border-radius 15px
    #tituloNosotros
      text-shadow 5px 5px 40px black
  #imagenNosotros
    width 500px
    figure
      img
        border-radius 50px
        margin-left 5em
        box-shadow 5px 5px 15px black
        width 300px

#articuloNosotros #textoNosotros, #articuloNosotros #imagenNosotros
  display inline-block
  vertical-align middle

#articuloContactanos
  padding-bottom 80px
  #tituloContactanos
    margin-left 2.5em
    text-shadow 5px 5px 40px black
  #tabsContactanos
    margin 0 auto
    width 600px
  #seccionTab
    border 1px #eef0f6 solid
    background #eef0f6
  #imagenContactanos
    margin-left 35px
    img
      width 200px
  #email
    padding 25px
    #emailAjuste
      #enviar
        text-align right

#articuloContactanos #informacion,
#articuloContactanos #imagenContactanos
  padding 35px
  display inline-block
  vertical-align top

#iconosRedes
  text-align right
  padding-right 10%
  .facebook
    font-family 'icomoon'
    font-size 2.5em
    color #3B5998
    margin-left 3em
    &:after
    &:hover
      text-decoration none
      color #8b9dc3
      -moz-transition 0.3s linear
      -o-transition 0.3s linear
      -webkit-transition 0.3s linear
      transition 0.3s linear

.separador
  height 90px
  text-align center
  img
    height 5px
    width 1000px

.colorLetras
  color #267d3d

.bg-secundary
  color #fff
  background-color #7cb43b
  padding 10px
  border-radius 15px

.tabs_holder
  width 800px
  margin 0 auto

.cargando
  text-align center
  display none

/** --- **/

#articuloContactanos
  #textoContactanos
    font-size 18px
    margin 0 auto
    text-align justify
    width 900px

#container
  font-family 'Delius Swash Caps', cursive
  margin 0 auto
  input
    height 2.5em
    visibility hidden
    &:hover
    &:checked
      & + label
        position relative
        z-index 6
  label
    border-radius .25em .25em 0 0
    cursor pointer
    display block
    float left
    height 2.5em
    line-height 2.5em
    margin-right .25em
    padding 0 1.5em
    text-align center

#content
  border-radius 0 .25em .25em .25em
  position relative
  width 100%
  z-index 5
  div
    opacity 0
    padding 1.5em
    position absolute
    z-index -100
  #content-1
    #mapa
      iframe
        border-radius 15px

#content #content-1 #mapa, #content-1 #informacion
  display inline-block
  vertical-align middle

#content-1
  #informacion
    height 250px
    width 290px
  #imagenContactanos
    margin-left 80px
    img
      border-radius 10px

#content-2
  input
    visibility visible
  label
    color black

#container input#tab-1:checked ~ #content #content-1,
#container input#tab-2:checked ~ #content #content-2
  opacity 1
  z-index 100

#content-1 #informacion, #content-1 #imagenContactanos
  display inline-block
  vertical-align top


