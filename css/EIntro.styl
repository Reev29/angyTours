@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot?-i6l90x')
  font-weight normal
  font-style normal

body
  background-image url(../imagenes/fondo.jpg)

#intro
  background-image url(../imagenes/intro.jpg)
  background-repeat no-repeat
  background-size 100% 100%
  padding-bottom 150px
  margin-top -20px
  figure
    height 370px
    margin-left 21em
    padding-top 4em
    width 610px
  img
    height 370px
    width 610px
  #iconosPrincipales
    background-color rgba(231,227,224, 0.5)
    border-radius 15px
    margin-left 67%
    margin-top 5%
    padding 20px 15px
    width 310px

.flechita_intro
  position absolute
  margin 150px 0 0 500px

#iniciarSesion h4, #registrar h4
  color #278e00
  font-size 40px
  font-weight bold
  text-align center

/** --- **/
header
  #nav_bar
    -moz-box-shadow 0px 11px 14px 0px rgba(50, 50, 50, 0.6)
    -ms-box-shadow 0px 11px 14px 0px rgba(50, 50, 50, 0.6)
    -webkit-box-shadow 0px 11px 14px 0px rgba(50, 50, 50, 0.6)
    background-image url(../imagenes/navbar.jpg)
    background-repeat no-repeat
    background-size 100% 100%
    box-shadow 0px 11px 14px 0px rgba(50, 50, 50, 0.6)
    height 70px
    z-index 9999
    
    ul
      -moz-transition: 0.5s;
      -ms-transition: 0.5s;
      -webkit-transition: 0.5s;
      list-style: none;
      transition: 0.5s;

      li
        display inline-block
        margin 0px
        a
          color #A64A00
          font-size 16px
          font-weight strong
          margin-left 0.5em
          padding 1.21em 15px
          &:hover
            background-color rgba(255,113,0, 0.8)
            color white
    
    #imagenIzquierda
      margin-left 15em
      width 50px
    
    #figuraNav
      margin-top 0px
      border-radius 10px
      
      img
        width 40px      

    #imagenIzquierda, ul
      display inline-block

#nav_bar ul li .palmeraImagen, #nav_bar ul li a
  display inline-block

.palmeraImagen
  img
    width 30px

.navbar-fixed
  position fixed
  top 0
  width 100%

.moverNav
  -ms-transform: translate(5.5em,0px);
  -moz-transform: translate(5.5em,0px);
  -webkit-transform: translate(5.5em,0px);
  transform: translate(5.5em,0px);

/** --- **/

